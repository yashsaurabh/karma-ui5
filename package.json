{
  "name": "karma-ui5",
  "description": "A Karma plugin for UI5",
  "version": "2.3.1",
  "author": "SAP SE (https://www.sap.com)",
  "license": "Apache-2.0",
  "homepage": "https://github.com/SAP/karma-ui5",
  "bugs": "https://github.com/SAP/karma-ui5/issues/",
  "keywords": [
    "ui5",
    "openui5",
    "sapui5",
    "karma-adapter",
    "karma-plugin"
  ],
  "engines": {
    "node": ">= 10.0",
    "npm": ">= 5"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/SAP/karma-ui5.git"
  },
  "main": "lib/index.js",
  "files": [
    "dist",
    "lib",
    "helper.js",
    "LICENSES/**",
    ".reuse/**"
  ],
  "scripts": {
    "lint": "eslint ./",
    "lint-fix": "eslint ./ --fix",
    "test": "npm run lint && npm run unit-coverage && npm run integration",
    "unit": "jest -c test/unit/jest.config.js",
    "unit-coverage": "jest -c test/unit/jest.config.js --coverage",
    "integration": "jest -c test/integration/jest.config.js",
    "integration-internet-explorer": "jest -c test/integration/jest.config.js --browsers=IE",
    "integration-saucelabs": "jest -c test/integration/jest.config.js --useSauceLabs=true",
    "dev": "webpack --watch --mode=development",
    "prepare": "webpack",
    "preversion": "npm test",
    "version": "git-chglog --next-tag v$npm_package_version -o CHANGELOG.md && git add CHANGELOG.md",
    "postversion": "git push --follow-tags",
    "release-note": "git-chglog -c .chglog/release-config.yml v$npm_package_version"
  },
  "peerDependencies": {
    "karma": ">= 4.3.0"
  },
  "dependencies": {
    "@ui5/fs": "^2.0.4",
    "@ui5/project": "^2.2.3",
    "@ui5/server": "^2.2.6",
    "express": "^4.17.1",
    "http-proxy": "^1.18.1",
    "js-yaml": "^3.14.0"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/preset-env": "^7.12.1",
    "@openui5/sap.ui.core": "^1.82.2",
    "babel-loader": "^8.1.0",
    "core-js": "^3.6.5",
    "eslint": "^6.8.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-jest": "^23.20.0",
    "eslint-plugin-jsdoc": "^30.7.5",
    "execa": "^3.4.0",
    "istanbul-lib-coverage": "^3.0.0",
    "jest": "^25.5.4",
    "jest-extended": "^0.11.5",
    "karma": "^5.2.3",
    "karma-chrome-launcher": "^3.1.0",
    "karma-coverage": "2.0.3",
    "karma-edge-launcher": "^0.4.2",
    "karma-ie-launcher": "^1.0.0",
    "karma-qunit": "^4.1.1",
    "karma-sauce-launcher": "^4.3.3",
    "license-webpack-plugin": "^2.3.1",
    "puppeteer": "^5.4.1",
    "qunit": "^2.11.3",
    "rimraf": "^3.0.2",
    "typescript": "^4.0.5",
    "webpack": "^4.44.2",
    "webpack-cli": "^3.3.12"
  }
}
